CREATE TABLE tb_bike_transportation_vehicle (
  id BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL,
   year VARCHAR(255),
   model VARCHAR(255),
   plate_number VARCHAR(255),
   renter_id BIGINT,
   CONSTRAINT pk_tb_bike_transportation_vehicle PRIMARY KEY (id)
);

ALTER TABLE tb_bike_transportation_vehicle ADD CONSTRAINT FK_TB_BIKE_TRANSPORTATION_VEHICLE_ON_RENTER FOREIGN KEY (renter_id) REFERENCES tb_renter (id);

CREATE TABLE tb_renter (
  id BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL,
   name VARCHAR(255),
   cnpj VARCHAR(255),
   birth_date date,
   cnh_type VARCHAR(255),
   cnh_image VARCHAR(255),
   bike_transportation_vehicle_id BIGINT,
   CONSTRAINT pk_tb_renter PRIMARY KEY (id)
);

ALTER TABLE tb_renter ADD CONSTRAINT FK_TB_RENTER_ON_BIKE_TRANSPORTATION_VEHICLE FOREIGN KEY (bike_transportation_vehicle_id) REFERENCES tb_bike_transportation_vehicle (id);